---
// Carousel.astro
import ProductCard from './ProductCard.astro';
import type { ProductItemClean } from '../types';

const { items = [] }: { items?: ProductItemClean[] } = Astro.props;
---

<div class="carousel-container">
  <button class="carousel-btn left" id="carousel-prev" aria-label="Previous">
    <span>&larr;</span>
  </button>

  <div class="carousel-track-wrapper">
    <div class="carousel-track" id="carousel-track">
      {items.map((item, idx) => (
        <div class="carousel-slide" data-idx={idx}>
          <ProductCard {...item} />
        </div>
      ))}
    </div>
  </div>

  <button class="carousel-btn right" id="carousel-next" aria-label="Next">
    <span>&rarr;</span>
  </button>
</div>

<script is:inline>
  const track = document.getElementById('carousel-track');
  const slides = Array.from(track.children);
  let current = 0;

  function updateCarousel(index) {
    const offset = -index * 100;
    track.style.transform = `translateX(${offset}%)`;
  }

  document.getElementById('carousel-prev').onclick = () => {
    current = (current - 1 + slides.length) % slides.length;
    updateCarousel(current);
  };

  document.getElementById('carousel-next').onclick = () => {
    current = (current + 1) % slides.length;
    updateCarousel(current);
  };

  updateCarousel(current);
</script>

<style>
.carousel-container {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  max-width: 480px;
  margin: 2em auto;
  padding: 1em;
  border-radius: 24px;
  background: rgba(255, 245, 238, 0.65);
  box-shadow: 0 8px 24px rgba(0,0,0,0.08);
  backdrop-filter: blur(12px);
}

.carousel-track-wrapper {
  overflow: hidden;
  width: 100%;
  max-width: 280px;
}

.carousel-track {
  display: flex;
  transition: transform 0.6s ease;
  width: 100%;
}

.carousel-slide {
  min-width: 100%;
  padding: 0.5em;
  box-sizing: border-box;
}

.carousel-btn {
  background: rgba(255, 255, 255, 0.4);
  border: none;
  font-size: 1.5rem;
  cursor: pointer;
  border-radius: 50%;
  padding: 0.5em;
  transition: background 0.3s;
}

.carousel-btn:hover {
  background: #ffe4e1;
}

@media (max-width: 600px) {
  .carousel-container {
    max-width: 90%;
    padding: 0.5em;
  }
}
</style>
