---
// Props: thumbnailUrl, caption
const { thumbnailUrl = '/reel-thumb.jpg', caption = 'This is a sample caption for the latest reel. All items below are unique, handcrafted, and available until sold out!' } = Astro.props;
---

<div class="reel-hero">
  <div class="reel-thumbnail artistic">
    <img src={thumbnailUrl} alt="Latest Reel Thumbnail" />
  </div>
  <div class="reel-caption">
    {caption}
  </div>
</div>

<style>
.reel-hero {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 2.5em;
  margin: 2em 0 2.5em 0;
  flex-wrap: wrap;
}

.reel-thumbnail.artistic {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  max-width: 320px;
  min-width: 200px;
  background: rgba(255,255,255,0.92);
  border: 2px solid #ececec; /* soft neutral border */
  border-radius: 18px;
  box-shadow: 0 4px 18px 0 rgba(96,115,159,0.10), 0 1.5px 6px 0 rgba(0,0,0,0.04);
  padding: 1.2em;
  transition: box-shadow 0.3s;
}
.reel-thumbnail.artistic:hover {
  box-shadow: 0 8px 28px 0 rgba(96,115,159,0.13), 0 3px 12px 0 rgba(0,0,0,0.07);
}

.reel-thumbnail img {
  width: 100%;
  display: block;
  border-radius: 12px;
  box-shadow: 0 2px 12px 0 rgba(0,0,0,0.08);
  background: #fff;
}

.reel-caption {
  max-width: 350px;
  font-family: 'Playfair Display', serif;
  font-size: 1.15em;
  color: #555;
  opacity: 0.95;
  text-align: left;
  line-height: 1.5;
}

@media (max-width: 900px) {
  .reel-hero {
    flex-direction: column;
    gap: 1.5em;
    align-items: center;
  }
  .reel-caption {
    text-align: center;
    max-width: 90vw;
  }
}
</style> 