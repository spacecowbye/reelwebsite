---
// JewelryReelComponent.astro
// Props for the component
interface Props {
  reelLink?: string;
  authorName?: string;
  profileImage?: string;
}

const {
  reelLink = "https://www.instagram.com/deepas_silver_jewelry/", // Default link URL
  authorName = "deepas_silver_jewelry",
  profileImage = "/instadp.jpeg"
} = Astro.props;

---

<div class="reel-thumbnail-wrapper">
  <div class="reel-section">
    <a href={reelLink} class="reel-link" aria-label={`View jewelry reel by ${authorName}`}>
      <img
        src="/testImage.png"
        alt={`Jewelry reel by ${authorName}`}
        class="reel-item"
      />
      <div class="post-section">
        <div class="psfooter">
          <div class="usrProfile">
            <div class="uplogo">
              <img src={profileImage} alt={authorName} />
            </div>
            <p>{authorName} </p>
          </div>
        </div>

        <div class="action-btn">
          <ul>
            <li>
              <button class="iconbtn">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  height="24"
                  fill="rgba(255,255,255,1)"
                >
                  <path fill="none" d="M0 0h24v24H0z"></path>
