---
interface Props {
  reelLink?: string;
  authorName?: string;
  profileImage?: string;
  reelImage?: string;
}

const {
  reelLink = "https://www.instagram.com/deepas_silver_jewelry/",
  authorName = "deepas_silver_jewelry",
  profileImage = "/instadp.jpeg",
  reelImage = "/testImage.png",
} = Astro.props;
---

<a href={reelLink} class="reel-section" aria-label={`View jewelry reel by ${authorName}`}>
  <img
    src={reelImage}
    alt={`Jewelry reel by ${authorName}`}
    class="reel-item"
    loading="lazy"
  />

  <div class="profile-bar">
    <div class="uplogo">
      <img src={profileImage} alt={authorName} />
    </div>
    <p>{authorName}</p>
  </div>
</a>

<style>
  .reel-section {
    margin: 0 auto;
    display: block;
    width: 300px;
    overflow: hidden;
    border-radius: 12px;
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.05);
    background: transparent;
    text-decoration: none;
    color: inherit;
  }

  .reel-item {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: 12px 12px 0 0;
    display: block;
  }

  .profile-bar {
    display: flex;
    align-items: center;
    gap: 10px;
    background: #000;
    color: white;
    padding: 10px 12px;
    border-radius: 0 0 12px 12px;
  }

  .uplogo {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
  }

  .uplogo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .profile-bar p {
    margin: 0;
    font-size: 14px;
    font-weight: 500;
    letter-spacing: 0.3px;
  }

  @media (max-width: 480px) {
    .reel-section {
      max-width: 280px;
    }

    .reel-item {
      height: 360px;
    }

    .uplogo {
      width: 28px;
      height: 28px;
    }

    .profile-bar {
      padding: 8px 10px;
    }

    .profile-bar p {
      font-size: 13px;
    }
  }
</style>
